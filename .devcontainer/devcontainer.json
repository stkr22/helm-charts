{
	"name": "helm-charts-dev-environment",
	"image": "mcr.microsoft.com/devcontainers/base:2.0.3-ubuntu24.04@sha256:daa08ddb48ad4e4e7367c348e0a6f250762f1f0d8348f1f9acbef5f884ce093d",
	"features": {
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "latest",
			"helm": "latest",
			"minikube": "none"
		},
		"ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {}
	},
	"mounts": [
		{
			"source": "${localEnv:HOME}/.kube",
			"target": "/home/vscode/.kube",
			"type": "bind"
		}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"ms-azuretools.vscode-containers",
				"redhat.vscode-yaml"
			]
		}
	}
}
